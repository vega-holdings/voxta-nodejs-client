{
  "name": "voxta-nodejs-client",
  "version": "0.1.0",
  "description": "Node.js/TypeScript client for the Voxta server (SignalR + audio input WebSocket).",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "FEATURES.md",
    "examples"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json -w",
    "example:console": "node examples/console-chat.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/integration"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@microsoft/signalr": "^8.0.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/rollup-win32-x64-msvc": "^4.54.0",
    "@types/node": "^20.17.10",
    "@types/ws": "^8.5.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "optionalDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.54.0"
  }
}
